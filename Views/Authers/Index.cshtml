@using bookshop.ViewModel;
@model List<AutherVM>
@section Title {
	Authars
}
@section Subtitel {
	Show
}
@section Button {
	<a asp-controller="Authers" asp-action="Create" class="btn btn-success text-decoration-none">Create</a>
}

@if (!Model.Any())
{
	<div class="card-body">
		<div class="alert alert-warning alert-dismissible">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
			<h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
			No Categories
		</div>
	</div>
}
else
{
	<div class="card-body">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>ID</th>
					<th>Category Name</th>
					<th style="width:300px">Action</th>
				</tr>
			</thead>
			<tbody>

				@foreach (var item in Model)
				{
					<tr>
						<th>@item.Id</th>
						<th>@item.AutherName</th>
						<th>
							<a class="btn btn-primary " asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">
								<i class="far fa-edit"></i>Edit
							</a>
							<a class="btn btn-info" asp-controller="Category" asp-action="Details" asp-route-id="@item.Id">
								<i class="fas fa-info-circle"></i>Details
							</a>
							<a class="btn btn-danger js-delete" href="#" data-id="@item.Id">
								<i class="fas fa-trash-alt"></i>Delete

							</a>

						</th>
					</tr>

				}


			</tbody>

		</table>
	</div>
}
