@using bookshop.ViewModel
@model AutherFormVM
@section Title {
	Categories
}
@section Subtitel {
    @(Model?.Id == null ? "Create" : "Edit")
}
<form asp-controller="Authers">
    <div class="card-body">
        <div class="mb-3">
            <label asp-for="AutherName"></label>
            <input type="name" class="form-control w-75" asp-for="AutherName">
            <span asp-validation-for="AutherName" class="text-danger"></span>

        </div>
       
        <button type="submit" class="btn btn-primary">

            @(Model?.Id == null ? "Add" : "Update")
        </button>
    </div>



</form>